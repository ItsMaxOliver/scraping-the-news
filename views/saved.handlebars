<main>
    <div class="container middle">
        <div class="container">
            <div class="row mt-3 mx-auto saved-articles-area">
                <div class="col-12">
                    <div class="px-0" id="saved-articles">

                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<!-- Note Modal -->
<div id="note-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header text-center">
                <h2 class="modal-title text-left">
                    <strong class="note-title">Note for </strong>
                </h2>
                <hr>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <ul class="list-group note-container">
                </ul>
                <textarea id="note-text" placeholder="New Note" rows="4"></textarea>
            </div>
            <div class="modal-footer justify-content-between">
                <p class="message"></p>
                <button type="submit" class="btn btn-primary" id="save-note"><i class='fa fa-floppy-o'></i> Save note</button>
            </div>
        </div>
    </div>

</div>

    
